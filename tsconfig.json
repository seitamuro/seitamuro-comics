{
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker", "es2017"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "exclude": ["**/dist", "**/node_modules"],
  "include": ["workspaces"]
}
